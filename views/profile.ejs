      console.log("validating")
      let username = document.forms["profileForm"]["username"].value;
      let email = document.forms["profileForm"]["email"].value;
      let firstName = document.forms["profileForm"]["firstName"].value;
      let lastName = document.forms["profileForm"]["lastName"].value;
      let address = document.forms["profileForm"]["address"].value;
      let city = document.forms["profileForm"]["city"].value;
      let country = document.forms["profileForm"]["country"].value;
      let postalCode = document.forms["profileForm"]["postalCode"].value;
      let phoneNumber = document.forms["profileForm"]["phone"].value;

      if (username.length < 4) {
          toastr.error("Username must be at least 6 characters.");
          return false;
        }

      if (firstName.length < 4) {
          toastr.error("Firstname must be at least 5 characters.");
          return false;
      }

      if (lastName.length < 4) {
          toastr.error("Lastname must be at least 5 characters.");
          return false;
      }

      if (email.length < 7) {
          toastr.error("Please enter a valid email.");
          return false;
      }

      if (address.length < 7) {
          toastr.error("Please enter a valid address.");
          return false;
      }

      if (city.length <= 3) {
          toastr.error("Please enter a valid city.");
          return false;
      }

      if (country.length < 7) {
          toastr.error("Please enter a valid country.");
          return false;
      }

      if (postalCode.length < 4) {
          toastr.error("Please enter a valid postalCode.");
          return false;
      }

      document.profileForm.submit();
    }
