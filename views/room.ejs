    <style>
      #video-grid {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        
      }
      video {
        height: 300px;
        width: 400px;
        object-fit: cover;
        padding: 8px;
        border-radius: 20px;
      }

      video:hover {
        height: 300px;
        width: 400px;
        object-fit: cover;
        padding: 8px;
        border-radius: 20px;

        box-shadow: -2px -1px 31px -7px rgba(56,56,56,0.7);
        -webkit-box-shadow: -2px -1px 31px -7px rgba(56,56,56,0.7);
        -moz-box-shadow: -2px -1px 31px -7px rgba(56,56,56,0.7);
        -moz-transform: scale(1.1);
        -webkit-transform: scale(1.1);
        -o-transform: scale(1.1);
        -ms-transform: scale(1.1);
        transform: scale(1.1);
      }
    </style>
