        </div>

        <div class="main_controls">
          <div class="main_controls_block">
            <div
              data-toggle="tooltip" data-placement="top" title="Mute/Unmute"
              onclick="muteUnmute()"
              class="main_controls_button main_mute_button"
            >
              <i class="fas fa-microphone"></i>
              <span></span>
            </div>
            <div
              data-toggle="tooltip" data-placement="top" title="Play/Pause Video"
              onclick="playStop()"
              class="main_controls_button main_video_button"
            >
              <i class="fas fa-video"></i>
              <span></span>
            </div>
          </div>

          <div class="main_controls_block">
            <div class="main_controls_button users" onclick="toogleUsers()" data-toggle="tooltip" data-placement="top" title="Participants">
              <i class="fas fa-user-friends"></i>
            </div>
            <div class="main_controls_button" data-toggle="tooltip" data-placement="top" title="Settings">
              <i class="fas fa-shield-alt"></i>
            </div>
            <div class="main_controls_button comment" onclick="hideChat()" data-toggle="tooltip" data-placement="top" title="Toggle Chat">
              <i class="fas fa-comments"></i>
            </div>
          </div>

          <div class="main_controls_block">
            <div class="main_controls_button" data-toggle="tooltip" data-placement="top" title="Exit">
              <span class="leave_meeting"
                ><a href="/" style="text-decoration: none; color: lightpink"
                  ><i class="fa fa-power-off" aria-hidden="true"></i></a
                ></span
              >
            </div>
          </div>
        </div>
      </div>

      <div class="main_right" style="display:none">
        <div class="main_header">
          <h6>Chat</h6>
        </div>

        <div class="main_chat_window">
          <ul class="messages"></ul>
        </div>
        <div class="main_message_container">
          <input id="chat_messge" type="text" placeholder="Type message here" />
        </div>
      </div>

      <div class="main_right_users" id="userArea" style="display:none">
        <div class="main_header">
          <h6>Users</h6>
        </div>

        <div class="main_users_window">
          <ul class="messages userArea" id="userAreas">
            <!-- <li class="user_list">user 1</li> -->
          </ul>
        </div>
      </div>

